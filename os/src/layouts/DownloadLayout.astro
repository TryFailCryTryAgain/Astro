---
import BaseLayout from "./BaseLayout.astro";


---

<BaseLayout>

    <header>
        <nav>
            <li><button id="download-btn">&#128229;</button></li>
        </nav>
    </header>

    <div class="layout">
        <slot />
    </div>



</BaseLayout>


<script>

    const button = document.getElementById("download-btn");

    button?.addEventListener("click", function() {
        // Custom Event
        const event = new CustomEvent('download');
        window.dispatchEvent(event);
    });



</script>


<style>

    .layout {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    header {
        width: 100%;
        height: 50px;
        background-color: #ccc;
        margin-top: auto;
    }

    nav {
        height: 100%;
        width: 100%;
        display: flex;
        justify-content: flex-start;
        align-items: center;
        list-style-type: none;
        padding: 1rem;
    }

    nav button {
        border: none;
        background: none;
        font-size: 2rem;
        cursor: pointer;
    }


</style>
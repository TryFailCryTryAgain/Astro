<menu>
    <li id="create-new-file">Create New File</li>
    <li>Create New Folder</li>
</menu>


<style>

    section {
        flex: 1;
        
    }

    menu {
        display: none;

        background: white;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1), 
                    0 4px 6px rgba(0, 0, 0, 0.05);
        padding: 6px 0;
        width: 220px;
        list-style: none;
        margin: 0;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
        font-size: 14px;
        user-select: none;
        position: absolute;
    }

    menu li {
        display: flex;
        align-items: center;
        padding: 6px 12px;
        margin: 2px 6px;
        border-radius: 4px;
        cursor: pointer;
        color: #374151;
        transition: all 0.15s ease;
        position: relative;
    }

    menu li:hover {
        background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
        transform: translateX(2px);
    }

    menu li:active {
        background: linear-gradient(135deg, #e5e7eb, #d1d5db);
        transform: translateX(1px);
    }

</style>


<script>


    const screen = document.querySelector("section");
    const menu = document.querySelector("menu");


    screen?.addEventListener('contextmenu', function(e) {
        e.preventDefault();

        if(!menu) {
            return;
        }

        menu.style.display = 'block';
        menu.style.left = e.pageX + 'px';
        menu.style.top = e.pageY + 'px';

        // Stores the click element ref. if need be
        // menu.dataset.targetId = e.target.id;
    });

    document.addEventListener("click", function() {

        if (!menu) {
            return;
        }

        menu.style.display = 'none';

    });



</script>


<script>
    const Window = document.getElementById("window");
    const btn = document.getElementById("close-window-btn");

    function HideWindow() {
        if (Window) {
            Window.style.display = "none";
        }
    }

    if (btn) {
        btn.addEventListener("click", HideWindow);
    }

    function ShowWindow() {
        if (Window) {
            Window.style.display = "flex";
        }
    }

    window.addEventListener('open-notepad', ShowWindow);

    // Formatting buttons
    const boldBtn = document.getElementById("bold");
    const italicBtn = document.getElementById("italic");
    const underlineBtn = document.getElementById("underline");
    const bulletBtn = document.getElementById("bullet-list");
    const numberedBtn = document.getElementById("numbered-list");

    // Text Editor (contenteditable div)
    const editor = document.querySelector(".text-editor") as HTMLDivElement;

    // Format text function for contenteditable
    function formatText(command: string) {
        if (!editor) return;
        
        editor.focus();
        document.execCommand(command, false, undefined);
    }

    // Add bullet list
    function addBulletList() {
        if (!editor) return;
        
        editor.focus();
        document.execCommand('insertUnorderedList', false, undefined);
    }

    // Add numbered list
    function addNumberedList() {
        if (!editor) return;
        
        editor.focus();
        document.execCommand('insertOrderedList', false, undefined);
    }

    // Event listeners
    boldBtn?.addEventListener("click", (e) => {
        e.preventDefault();
        formatText('bold');
    });
    
    italicBtn?.addEventListener("click", (e) => {
        e.preventDefault();
        formatText('italic');
    });
    
    underlineBtn?.addEventListener("click", (e) => {
        e.preventDefault();
        formatText('underline');
    });
    
    bulletBtn?.addEventListener("click", (e) => {
        e.preventDefault();
        addBulletList();
    });
    
    numberedBtn?.addEventListener("click", (e) => {
        e.preventDefault();
        addNumberedList();
    });

    // Update button states based on current selection
    editor?.addEventListener('mouseup', updateButtonStates);
    editor?.addEventListener('keyup', updateButtonStates);

    function updateButtonStates() {
        if (!editor) return;

        const isBold = document.queryCommandState('bold');
        const isItalic = document.queryCommandState('italic');
        const isUnderline = document.queryCommandState('underline');

        boldBtn?.classList.toggle('active', isBold);
        italicBtn?.classList.toggle('active', isItalic);
        underlineBtn?.classList.toggle('active', isUnderline);
    }
</script>



<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.notepad-window {
    width: 800px;
    height: 600px;
    background: linear-gradient(135deg, #f5f5f7 0%, #e8e9ed 100%);
    border-radius: 12px;
    box-shadow: 
        0 25px 50px -12px rgba(0, 0, 0, 0.25),
        0 0 0 1px rgba(255, 255, 255, 0.1) inset,
        0 1px 3px 0 rgba(0, 0, 0, 0.1);
    overflow: hidden;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'SF Pro Text', sans-serif;
    display: flex;
    flex-direction: column;
}

/* Window Header */
.window-header {
    background: linear-gradient(to bottom, #ebebeb 0%, #d9d9d9 100%);
    padding: 12px 16px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid #c2c2c2;
    -webkit-app-region: drag;
    user-select: none;
}

.window-controls {
    display: flex;
    gap: 8px;
    -webkit-app-region: no-drag;
}

.window-control {
    width: 12px;
    height: 12px;
    cursor: pointer;
    transition: all 0.2s ease;
    clip-path: polygon(
        20% 0,
        50% 30%,
        80% 0%,
        100% 20%,
        70% 50%,
        100% 80%,
        80% 100%,
        50% 70%,
        20% 100%,
        0% 80%,
        30% 50%,
        0% 20%
    );
}

.window-control.close {
    background: #ff5f57;
    border: 1px solid #e0443e;
}

.window-control:hover {
    transform: scale(1.1);
    filter: brightness(1.1);
}

.window-title {
    flex: 1;
    text-align: center;
    font-size: 13px;
    font-weight: 500;
    color: #333;
    letter-spacing: -0.2px;
}

.window-actions {
    display: flex;
    gap: 12px;
    -webkit-app-region: no-drag;
}

.icon-button {
    background: transparent;
    border: none;
    font-size: 16px;
    cursor: pointer;
    padding: 4px;
    border-radius: 4px;
    transition: all 0.2s ease;
    opacity: 0.8;
}

.icon-button:hover {
    background: rgba(0, 0, 0, 0.1);
    opacity: 1;
}

/* Toolbar */
.toolbar {
    background: linear-gradient(to bottom, #f0f0f0 0%, #e5e5e5 100%);
    border-bottom: 1px solid #d0d0d0;
    padding: 8px 16px;
}

.menu-bar {
    display: flex;
    gap: 24px;
    margin-bottom: 8px;
    padding-bottom: 4px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.05);
}

.menu-item {
    font-size: 13px;
    font-weight: 500;
    color: #333;
    cursor: pointer;
    padding: 4px 8px;
    border-radius: 4px;
    transition: all 0.2s ease;
    position: relative;
}

.menu-item:hover {
    background: rgba(0, 0, 0, 0.1);
}

.toolbar-buttons {
    display: flex;
    gap: 4px;
    align-items: center;
}

.toolbar-btn {
    background: white;
    border: 1px solid #c2c2c2;
    border-radius: 4px;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 13px;
    font-weight: 600;
    color: #333;
    transition: all 0.2s ease;
}

.toolbar-btn:hover {
    background: #f0f0f0;
    border-color: #999;
    transform: translateY(-1px);
}

.toolbar-btn:active {
    transform: translateY(0);
}

.toolbar-btn b, .toolbar-btn i, .toolbar-btn u {
    font-style: normal;
    text-decoration: none;
}

.separator {
    width: 1px;
    height: 20px;
    background: #d0d0d0;
    margin: 0 8px;
}

/* Editor Area */
.editor-area {
    flex: 1;
    display: flex;
    overflow: hidden;
    background: white;
}

.line-numbers {
    background: #f8f8f8;
    width: 50px;
    border-right: 1px solid #e0e0e0;
    padding: 8px 4px;
    font-family: 'SF Mono', Monaco, Consolas, monospace;
    font-size: 13px;
    color: #666;
    text-align: right;
    line-height: 1.5;
    overflow-y: auto;
}

.line-number {
    padding: 2px 8px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.text-editor {
    flex: 1;
    border: none;
    outline: none;
    padding: 1rem 2rem;
    font-family: 'SF Mono', Monaco, Consolas, monospace;
    font-size: 14px;
    line-height: 1.5;
    color: #333;
    resize: none;
    background: white;
    tab-size: 4;
    overflow-y: auto;
    white-space: pre;
}

.text-editor::placeholder {
    color: #999;
    opacity: 0.6;
}

.text-editor:focus {
    box-shadow: inset 0 0 0 2px #007AFF;
}

/* Status Bar */
.status-bar {
    background: linear-gradient(to bottom, #e5e5e5 0%, #d9d9d9 100%);
    border-top: 1px solid #c2c2c2;
    padding: 6px 16px;
    display: flex;
    gap: 24px;
    font-size: 12px;
    color: #333;
    height: 28px;
    align-items: center;
}

.status-item {
    padding: 2px 8px;
    border-radius: 4px;
    cursor: default;
    transition: all 0.2s ease;
}

.status-item:hover {
    background: rgba(0, 0, 0, 0.1);
}

/* Scrollbar Styling */
.text-editor::-webkit-scrollbar,
.line-numbers::-webkit-scrollbar {
    width: 12px;
}

.text-editor::-webkit-scrollbar-track,
.line-numbers::-webkit-scrollbar-track {
    background: #f1f1f1;
}

.text-editor::-webkit-scrollbar-thumb,
.line-numbers::-webkit-scrollbar-thumb {
    background: #c1c1c1;
    border-radius: 6px;
    border: 3px solid #f1f1f1;
}

.text-editor::-webkit-scrollbar-thumb:hover,
.line-numbers::-webkit-scrollbar-thumb:hover {
    background: #a8a8a8;
}

/* Animation */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.notepad-window {
    animation: fadeIn 0.3s ease-out;
}

/* Responsive Design */
@media (max-width: 850px) {
    .notepad-window {
        width: 95vw;
        height: 80vh;
    }
}

/* Focus highlight */
.focus-indicator {
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    border: 2px solid #007AFF;
    border-radius: 14px;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.2s ease;
}

.text-editor:focus ~ .focus-indicator {
    opacity: 1;
}
</style>